@model BlackBoard.Models.GroupHandin

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>GroupHandin</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Assignment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Assignment.AssignmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Group.GroupId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Teacher)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Teacher.FirstName)
        </dd>
    </dl>
</div>
@if (this.Model.Group != null)
{
    foreach (var groups in this.Model.Group.GroupInfos)
    {
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelEnroll => groups.Student.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelEnroll => groups.Student.FirstName)
        </dd>
    }
}
else
{
    <h4><br />No students in group..</h4>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model.GroupHandinId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
