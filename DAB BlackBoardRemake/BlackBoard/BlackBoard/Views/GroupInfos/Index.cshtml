@model IEnumerable<BlackBoard.Models.GroupInfo>

@{
    ViewData["Title"] = "Index";
}

<h1>All Group info</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.GroupId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GroupInfoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GroupInfoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GroupInfoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
