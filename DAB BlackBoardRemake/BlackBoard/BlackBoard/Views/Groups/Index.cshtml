@model IEnumerable<BlackBoard.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>All Groups</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupId)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(model => item.GroupId)
        </th>
        <td>
            <a asp-action="Edit" asp-route-id="@item.GroupId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.GroupId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.GroupId">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
