@model BlackBoard.Models.Course

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseManagements)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClassDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClassDateTime)
        </dd>
    </dl>
    @if (this.Model.CourseManagements != null)
    {
        foreach (var cm in this.Model.CourseManagements)
        {
            <b>Course teacher(s)</b><br />
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelEnroll => cm.Teacher.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelEnroll => cm.Teacher.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelEnroll => cm.Teacher.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelEnroll => cm.Teacher.LastName)
            </dd>
        }
    }
    else
    {
        <b><br />No enrollments.</b><br />
    }
    <b>Enrollments</b><br />
    @if (this.Model.Enrolls != null)
    {
        foreach (var enroll in this.Model.Enrolls)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelEnroll => enroll.Student.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelEnroll => enroll.Student.FirstName)
            </dd>
            <br />
        }
    }
    else
    {
        <b><br />No enrollments.</b><br />
    }

    <b>Course Content</b><br />
    @if (this.Model.CourseContents != null)
    {
        foreach (var content in this.Model.CourseContents)
        {
            <a asp-area="" asp-route-id="@content.CourseContentId"
               asp-controller="CourseContents" asp-action="Details">@Html.DisplayFor(modelCC => content.ContentName)</a><br />
        }
    }
    else
    {
        <b><br />No course content yet.</b><br />
    }
    <b>Course Hand ins</b><br />
    @if (this.Model.Assignments != null)
    {
        foreach (var content in this.Model.Assignments)
        {
            <a asp-area="" asp-route-id="@content.AssignmentId"
               asp-controller="GroupHandins" asp-action="Index">@Html.DisplayFor(modelCC => content.AssignmentName)</a>
        }
    }
    else
    {
        <b><br />No course content yet.</b><br />
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CourseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
